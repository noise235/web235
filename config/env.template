# 环境配置模板
# 复制此文件为 .env 并填入真实的配置值

# 环境配置
NODE_ENV=development

# 服务器配置
PORT=8080
HOST=localhost

# 数据库配置 (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=arbitrage_system
DB_USER=arbitrage_user
DB_PASSWORD=your_database_password

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT密钥
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# 加密密钥
ENCRYPTION_KEY=your-super-secret-encryption-key-change-this

# 交易所API密钥 (加密存储)
# Binance
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
BINANCE_TESTNET=true

# OKX
OKX_API_KEY=your_okx_api_key
OKX_SECRET_KEY=your_okx_secret_key
OKX_PASSPHRASE=your_okx_passphrase
OKX_TESTNET=true

# Bybit
BYBIT_API_KEY=your_bybit_api_key
BYBIT_SECRET_KEY=your_bybit_secret_key
BYBIT_TESTNET=true

# 安全配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 日志配置
LOG_LEVEL=debug
LOG_FILE=./logs/app.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m

# 交易配置
TRADING_TEST_MODE=true
TRADING_MAX_POSITION_SIZE=10000
TRADING_MIN_ORDER_AMOUNT=100
TRADING_DEFAULT_SLIPPAGE=0.001

# WebSocket配置
WS_PING_INTERVAL=30000
WS_PONG_TIMEOUT=5000

# 监控配置
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# 邮件通知配置 (可选)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=arbitrage-system@yourdomain.com

# 钉钉/飞书通知配置 (可选)
DINGTALK_WEBHOOK=https://oapi.dingtalk.com/robot/send?access_token=your_token
FEISHU_WEBHOOK=https://open.feishu.cn/open-apis/bot/v2/hook/your_token

# 部署配置
DEPLOY_ENVIRONMENT=development
DEPLOY_VERSION=1.0.0
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest
